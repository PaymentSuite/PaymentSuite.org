<footer id="contact">
	<div class="wrap">
		<div class="container_12">
			<div class="grid_12">
				<h2>{{ '_footer_header' | trans }}</h2>
				<p>{{ '_footer_content' | trans }}</p>
			</div>
			<div class="grid_12">
				<form action="" class="form-inline">
					<div class="controls">
						<label for="form-name">Name</label>
						<input type="text" name="form-name" required="required">
					</div>
					<div class="controls">
						<label for="form-email">Email</label>
						<input type="email" name="form-email" required="required">
					</div>
					<div class="controls">
						<button class="button-form">Submit</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</footer>
